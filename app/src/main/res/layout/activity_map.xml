<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">
    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="rocks.underfoot.underfootandroid.MapActivity">

        <android.support.v7.widget.Toolbar
           android:id="@+id/my_toolbar"
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
           android:background="@android:color/transparent"
           android:elevation="4dp"
           android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
           app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/downloadUI"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/downloadProgressLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:text="Downloading..."
                app:layout_constraintBottom_toTopOf="@+id/downloadProgress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ProgressBar
                android:id="@+id/downloadProgress"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:progress="25"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/retryDownloadButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/downloadProgressLabel"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/retryDownloadButton"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Required Files"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/downloadProgress" />
        </android.support.constraint.ConstraintLayout>

        <com.mapzen.tangram.MapView
            android:id="@+id/map"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.mapzen.tangram.MapView>

        <!--
            Note that this will crash if you don't specify rippleColor. I guess it's specified in
            some themes but not the one I'm using.
        -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/userLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:rippleColor="@color/colorAccent"
            app:elevation="4dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:src="@drawable/ic_my_location_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/crossHairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="46sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        
        <android.support.constraint.ConstraintLayout
            android:id="@+id/mapMetadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/mapMetadataLatLabel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/mapMetadataLat"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Lat"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mapMetadataLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mapMetadataLatLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="?"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mapMetadataLonLabel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mapMetadataLatLabel"
                app:layout_constraintEnd_toStartOf="@+id/mapMetadataLon"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Lon"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mapMetadataLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mapMetadataLat"
                app:layout_constraintStart_toEndOf="@+id/mapMetadataLonLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="?"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mapMetadataZoomLabel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mapMetadataLonLabel"
                app:layout_constraintEnd_toStartOf="@+id/mapMetadataZoom"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Zoom"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/mapMetadataZoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mapMetadataLon"
                app:layout_constraintStart_toEndOf="@+id/mapMetadataZoomLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="?"
                style="@style/WhiteTextBlackShadow"
                android:textSize="12sp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/contextPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        sothree:umanoScrollableView="@+id/slideUpScrollView">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:id="@+id/slideUpTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Unknown"
                android:textSize="18sp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1" />
            <TextView
                android:id="@+id/slideUpLithology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/slideUpTitle"
                app:layout_constraintEnd_toStartOf="@+id/slideUpAge"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Lithology: Unknown"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1" />
            <TextView
                android:id="@+id/slideUpAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/slideUpTitle"
                app:layout_constraintStart_toEndOf="@+id/slideUpLithology"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:text="Age: Unknown"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1" />
        </android.support.constraint.ConstraintLayout>
        <ScrollView
            android:id="@+id/slideUpScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Unknown"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="Estimated Age"/>
                <TextView
                    android:id="@+id/estAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Unknown"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="Source"/>
                <TextView
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Unknown"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

